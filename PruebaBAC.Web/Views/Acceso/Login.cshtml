@model PruebaBAC.Web.Models.LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login - BAC</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>
<body class="bg-light d-flex align-items-center justify-content-center" style="height: 100vh;">

    <div class="card shadow p-4" style="width: 400px;">
        <h3 class="text-center mb-4 text-danger">Prueba Técnica BAC</h3>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">@ViewBag.Error</div>
        }

        <form asp-action="Login" method="post">
            <div class="mb-3">
                <label>Usuario</label>
                <input asp-for="Usuario" class="form-control" placeholder="admin" />
            </div>
            <div class="mb-3">
                <label>Contraseña</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="123456" />
            </div>
            <button type="submit" class="btn btn-danger w-100">Ingresar</button>
        </form>
    </div>

</body>
</html>