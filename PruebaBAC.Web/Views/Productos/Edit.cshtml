@{
}
@model PruebaBAC.Web.Models.ProductoViewModel

@{
    ViewData["Title"] = "Editar Producto";
}

<div class="card shadow" style="max-width: 600px; margin: auto;">
    <div class="card-header bg-primary text-white">
        <h4>Editar Producto</h4>
    </div>
    <div class="card-body">
        <form asp-action="Edit" method="post">

            <input type="hidden" asp-for="IdPro" />

            <div class="mb-3">
                <label>Código:</label>
                <input asp-for="Codigo" class="form-control" required />
            </div>

            <div class="mb-3">
                <label>Nombre del Producto:</label>
                <input asp-for="Producto1" class="form-control" required />
            </div>

            <div class="mb-3">
                <label>Precio:</label>
                <input asp-for="Precio" type="number" step="0.01" class="form-control" required />
            </div>

            <button type="submit" class="btn btn-primary w-100">Actualizar</button>
            <a asp-action="Index" class="btn btn-secondary w-100 mt-2">Cancelar</a>
        </form>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger mt-3">@ViewBag.Error</div>
        }
    </div>
</div>