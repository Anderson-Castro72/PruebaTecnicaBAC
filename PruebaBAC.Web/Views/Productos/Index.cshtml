@{
}
@model List<PruebaBAC.Web.Models.ProductoViewModel>

@{
    ViewData["Title"] = "Inventario";
}

<div class="card">
    <div class="card-header bg-danger text-white">
        <h4>Lista de Productos</h4>
    </div>
    <div class="card-body">
        <p>
            <a asp-action="Create" class="btn btn-success">Crear Nuevo</a>
        </p>
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Código</th>
                    <th>Producto</th>
                    <th>Precio</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Codigo</td>
                        <td>@item.Producto1</td>
                        <td>$ @item.Precio</td>
                        <td>
                            <a asp-action="Edit" asp-route-codigo="@item.Codigo" class="btn btn-primary btn-sm">Editar</a>

                            <a asp-action="Delete" asp-route-id="@item.IdPro" class="btn btn-danger btn-sm"
                               onclick="return confirm('¿Seguro que desea eliminar este producto?');">
                                Eliminar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>